generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
  shadowDatabaseUrl = env("SHADOW_DATABASE_URL")
}

model Team {
  id          String   @id @default(uuid())
  name        String   @db.VarChar(100)
  icon        String?  @db.VarChar(255)
  description String?  @db.VarChar(255)
  isActive    Boolean  @default(true)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  players     PlayersOnTeams[]
  homeMatches Match[]  @relation("HomeTeam")
  awayMatches Match[]  @relation("AwayTeam")
  accessMemberships AccessMembership[]
  matchEvents MatchEvent[]
  lineupEntries MatchLineupEntry[]
  leagueTeams LeagueTeam[]
  leagueGroupTeams LeagueGroupTeam[]
  standings   LeagueStanding[]
  invitationCodes InvitationCode[]
}

model User {
  id          String   @id @default(uuid())
  firebaseUid String   @unique @db.VarChar(128)
  email       String?  @unique @db.VarChar(191)
  displayName String?  @db.VarChar(191)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  player      Player?
  refreshTokens RefreshToken[]
  accessMemberships AccessMembership[]
  pushTokens UserPushToken[]
}

model Player {
  id        String   @id @default(uuid())
  name      String   @db.VarChar(100)
  positionSlug String?  @db.VarChar(20)
  position  Position? @relation(fields: [positionSlug], references: [slug])
  number    Int?
  isActive  Boolean  @default(true)
  photo     String?  @db.VarChar(255)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  teams     PlayersOnTeams[]
  user      User?    @relation(fields: [userId], references: [id])
  userId    String?  @unique
  events    MatchEvent[]
  skill     PlayerSkill?
  evaluationAssignmentsAsEvaluator MatchPlayerEvaluationAssignment[] @relation("Evaluator")
  evaluationAssignmentsAsTarget   MatchPlayerEvaluationAssignment[] @relation("EvaluationTarget")
  lineupEntries MatchLineupEntry[]
  evaluationAggregates PlayerEvaluationAggregate[]
}

enum MatchStatus {
  SCHEDULED
  IN_PROGRESS
  FINISHED
  CANCELED
}

model Match {
  id          String       @id @default(uuid())
  homeTeam    Team         @relation("HomeTeam", fields: [homeTeamId], references: [id])
  homeTeamId  String
  awayTeam    Team         @relation("AwayTeam", fields: [awayTeamId], references: [id])
  awayTeamId  String
  // Optional relation to a league and an optional group within that league
  league      League?      @relation(fields: [leagueId], references: [id])
  leagueId    String?
  group       LeagueGroup? @relation(fields: [groupId], references: [id])
  groupId     String?
  scheduledAt DateTime
  venue       String?      @db.VarChar(191)
  status      MatchStatus  @default(SCHEDULED)
  homeScore   Int          @default(0)
  awayScore   Int          @default(0)
  createdAt   DateTime     @default(now())
  updatedAt   DateTime     @updatedAt
  events      MatchEvent[]
  lineup      MatchLineupEntry[]
  playerEvaluationAssignments MatchPlayerEvaluationAssignment[]
  managers    AccessMembership[]

  @@unique([homeTeamId, awayTeamId, scheduledAt])
  @@index([homeTeamId, scheduledAt])
  @@index([awayTeamId, scheduledAt])
}

model UserPushToken {
  id        String   @id @default(uuid())
  user      User     @relation(fields: [userId], references: [id])
  userId    String
  token     String   @db.VarChar(512)
  platform  String?  @db.VarChar(32)
  createdAt DateTime @default(now())

  @@unique([userId, token])
}

model RefreshToken {
  id         String   @id @default(uuid())
  user       User     @relation(fields: [userId], references: [id])
  userId     String
  tokenHash  String   @unique @db.VarChar(191)
  expiresAt  DateTime
  revokedAt  DateTime?
  createdAt  DateTime @default(now())
}

enum AccessRole {
  MASTER             // Super usuário com acesso total e irrestrito ao sistema
  ADMIN              // Acesso total ao sistema
  MANAGER            // Gerencia time: jogadores, convites, escalações
  ASSISTANT          // Auxiliar técnico: mesmos acessos do MANAGER mas somente leitura
  PLAYER             // Visualiza dados do próprio time
  LEAGUE_MANAGER     // Gerencia liga: times, grupos, convites para técnicos
  MATCH_MANAGER      // Gerencia partida: gols, cartões, eventos
  REFEREE_COMMISSION // Visualiza calendário e questões disciplinares
  FAN                // Torcedor: visualiza ligas públicas (role default quando não tem membership)
}

model AccessMembership {
  id        String     @id @default(uuid())
  user      User       @relation(fields: [userId], references: [id])
  userId    String
  team      Team?      @relation(fields: [teamId], references: [id])
  teamId    String?
  // Optional relation to a League - membership can be scoped to a league
  league    League?    @relation(fields: [leagueId], references: [id])
  leagueId  String?
  // Optional relation to a Match - membership can be scoped to a match (MATCH_MANAGER)
  match     Match?     @relation(fields: [matchId], references: [id])
  matchId   String?
  role      AccessRole
  createdAt DateTime   @default(now())

  @@index([userId, role])
  @@index([teamId])
  @@index([leagueId])
  @@index([matchId])
  @@unique([userId, teamId, leagueId, matchId])
}

enum MatchEventType {
  GOAL
  FOUL
  YELLOW_CARD
  RED_CARD
  OWN_GOAL
}

enum MatchFormat {
  FUTSAL    // 5 jogadores (1 goleiro + 4)
  FUT7      // 7 jogadores (1 goleiro + 6)
  FUT11     // 11 jogadores (1 goleiro + 10)
}

model MatchLineupEntry {
  id         String   @id @default(uuid())
  match      Match    @relation(fields: [matchId], references: [id])
  matchId    String
  team       Team     @relation(fields: [teamId], references: [id])
  teamId     String
  player     Player   @relation(fields: [playerId], references: [id])
  playerId   String
  isStarting Boolean  @default(true)
  // Posição na formação tática (ex: GK, CB, LB, RB, CDM, CM, CAM, LW, RW, ST)
  position   String?  @db.VarChar(10)
  createdAt  DateTime @default(now())

  @@unique([matchId, playerId])
  @@index([matchId, teamId])
}

model MatchEvent {
  id        String         @id @default(uuid())
  match     Match          @relation(fields: [matchId], references: [id])
  matchId   String
  team      Team?          @relation(fields: [teamId], references: [id])
  teamId    String?
  player    Player?        @relation(fields: [playerId], references: [id])
  playerId  String?
  minute    Int?
  type      MatchEventType
  createdAt DateTime       @default(now())

  @@index([matchId])
  @@index([playerId])
}

enum PreferredFoot {
  LEFT
  RIGHT
  BOTH
}

model PlayerSkill {
  id           String        @id @default(uuid())
  player       Player        @relation(fields: [playerId], references: [id])
  playerId     String        @unique
  preferredFoot PreferredFoot
  attack       Int           @default(50)
  defense      Int           @default(50)
  shooting     Int           @default(50)
  ballControl  Int           @default(50)
  pace         Int           @default(50)
  passing      Int           @default(50)
  dribbling    Int           @default(50)
  physical     Int           @default(50)
  createdAt    DateTime      @default(now())
  updatedAt    DateTime      @updatedAt
}

// removed duplicate MatchPlayerEvaluationAssignment (kept the version with weight below)

model PlayerEvaluation {
  id           String   @id @default(uuid())
  assignment   MatchPlayerEvaluationAssignment @relation(fields: [assignmentId], references: [id])
  assignmentId String   @unique
  rating       Int      @default(0)
  comment      String?  @db.VarChar(500)
  createdAt    DateTime @default(now())
  // Campos novos (opcionais) para avaliação ponderada por critérios
  form         EvaluationForm? @relation(fields: [formId], references: [id])
  formId       String?
  overallScore Decimal? @db.Decimal(5, 2)
  formSnapshot Json?
  items        PlayerEvaluationItem[]
}

model Position {
  slug        String   @id @db.VarChar(20)
  name        String   @db.VarChar(100)
  description String?  @db.VarChar(255)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  players     Player[]
}

// ====== Avaliações adaptáveis (versões, critérios e contexto) ======

enum EvaluationPositionType {
  LINE
  GOALKEEPER
}

model EvaluationForm {
  id           String                  @id @default(uuid())
  name         String                  @db.VarChar(100)
  positionType EvaluationPositionType
  version      Int                     @default(1)
  isActive     Boolean                 @default(true)
  criteria     EvaluationCriteria[]
  createdAt    DateTime                @default(now())
  evaluations  PlayerEvaluation[]
  aggregates   PlayerEvaluationAggregate[]
}

model EvaluationCriteria {
  id          String         @id @default(uuid())
  form        EvaluationForm  @relation(fields: [formId], references: [id])
  formId      String
  key         String          @db.VarChar(50)
  name        String          @db.VarChar(100)
  description String?         @db.VarChar(255)
  weight      Decimal         @db.Decimal(5, 2)
  minValue    Int             @default(0)
  maxValue    Int             @default(10)
  createdAt   DateTime        @default(now())
  items       PlayerEvaluationItem[]

  @@unique([formId, key])
}

model PlayerEvaluationItem {
  id           String             @id @default(uuid())
  evaluation   PlayerEvaluation   @relation(fields: [evaluationId], references: [id])
  evaluationId String
  criteria     EvaluationCriteria @relation(fields: [criteriaId], references: [id])
  criteriaId   String
  value        Int
}

model PlayerEvaluationAggregate {
  id          String          @id @default(uuid())
  player      Player          @relation(fields: [playerId], references: [id])
  playerId    String
  form        EvaluationForm  @relation(fields: [formId], references: [id])
  formId      String
  count       Int             @default(0)
  weightedSum Decimal         @db.Decimal(10, 2) @default(0)
  average     Decimal         @db.Decimal(5, 2)  @default(0)
  updatedAt   DateTime        @updatedAt

  @@unique([playerId, formId])
  @@index([playerId])
}

// Peso do avaliador (default 1.00) para futura ponderação
// Campo adicional não quebra código existente
model MatchPlayerEvaluationAssignment {
  id                String   @id @default(uuid())
  match             Match    @relation(fields: [matchId], references: [id])
  matchId           String
  evaluator         Player   @relation("Evaluator", fields: [evaluatorPlayerId], references: [id])
  evaluatorPlayerId String
  target            Player   @relation("EvaluationTarget", fields: [targetPlayerId], references: [id])
  targetPlayerId    String
  createdAt         DateTime @default(now())
  completedAt       DateTime?
  evaluation        PlayerEvaluation?
  weight            Decimal  @db.Decimal(5, 2) @default(1.00)

  @@unique([matchId, evaluatorPlayerId, targetPlayerId])
  @@index([evaluatorPlayerId, matchId])
  @@index([targetPlayerId, matchId])
}

model PlayersOnTeams {
  player   Player @relation(fields: [playerId], references: [id])
  playerId String
  team     Team   @relation(fields: [teamId], references: [id])
  teamId   String
  assignedAt DateTime @default(now())
  assignedBy String? // Could be a user ID

  @@id([playerId, teamId])
  @@index([teamId])
}

// League / Championship structure
model League {
  id          String        @id @default(uuid())
  name        String        @db.VarChar(191)
  slug        String        @unique @db.VarChar(191)
  description String?       @db.VarChar(255)
  icon        String?       @db.VarChar(255)
  banner      String?       @db.VarChar(255)
  startAt     DateTime?
  endAt       DateTime?
  isActive    Boolean       @default(true)
  isPublic    Boolean       @default(false)
  
  // Formato do campeonato
  format      LeagueFormat? @relation("LeagueFormat", fields: [formatId], references: [id])
  formatId    String?
  
  // Modalidade: FUTSAL (5), FUT7 (7), ou FUT11 (11)
  matchFormat MatchFormat   @default(FUT11)
  
  createdAt   DateTime      @default(now())
  updatedAt   DateTime      @updatedAt

  teams       LeagueTeam[]
  groups      LeagueGroup[]
  invitations LeagueInvitation[]
  accessMemberships AccessMembership[]
  matches     Match[]
  phases      LeaguePhase[]
  disciplineRule DisciplineRule?

  @@index([formatId])
}

// Invitations for leagues: allows admin/managers to create invite codes
// that team owners/managers can use to enroll their team into the league.
model LeagueInvitation {
  id        String   @id @default(uuid())
  code      String   @unique @db.VarChar(64)
  league    League   @relation(fields: [leagueId], references: [id])
  leagueId  String
  createdBy String?  @db.VarChar(191)
  maxUses   Int      @default(1)
  uses      Int      @default(0)
  isActive  Boolean  @default(true)
  expiresAt DateTime?
  createdAt DateTime @default(now())

  @@index([leagueId])
}

model LeagueTeam {
  id        String   @id @default(uuid())
  league    League   @relation(fields: [leagueId], references: [id])
  leagueId  String
  team      Team     @relation(fields: [teamId], references: [id])
  teamId    String
  division  String?  @db.VarChar(64)
  createdAt DateTime @default(now())

  @@unique([leagueId, teamId])
  @@index([teamId])
}

model LeagueGroup {
  id        String       @id @default(uuid())
  league    League       @relation(fields: [leagueId], references: [id])
  leagueId  String
  phase     LeaguePhase? @relation("PhaseGroups", fields: [phaseId], references: [id])
  phaseId   String?
  name      String       @db.VarChar(100)
  createdAt DateTime     @default(now())

  teams     LeagueGroupTeam[]
  matches   Match[]
  standings LeagueStanding[]

  @@index([phaseId])
}

model LeagueGroupTeam {
  id       String      @id @default(uuid())
  group    LeagueGroup @relation(fields: [groupId], references: [id])
  groupId  String
  team     Team        @relation(fields: [teamId], references: [id])
  teamId   String
  position Int?

  @@unique([groupId, teamId])
  @@index([teamId])
}

// Invitation codes for teams: a team can have multiple codes; each code
// can be used up to `maxUses` times. When `uses >= maxUses` the code is
// considered expired/disabled.
model InvitationCode {
  id         String   @id @default(uuid())
  code       String   @unique @db.VarChar(64)
  team       Team     @relation(fields: [teamId], references: [id])
  teamId     String
  createdBy  String?  @db.VarChar(191)
  maxUses    Int      @default(1)
  uses       Int      @default(0)
  isActive   Boolean  @default(true)
  expiresAt  DateTime?
  createdAt  DateTime @default(now())

  @@index([teamId])
}

// ============================================================================
// LEAGUE FORMATS & TOURNAMENT STRUCTURES
// ============================================================================

enum LeagueFormatType {
  ROUND_ROBIN    // Pontos corridos (Brasileirão)
  KNOCKOUT       // Mata-mata puro (Copa do Brasil primeiras fases)
  MIXED          // Grupos + Mata-mata (Libertadores, Copa do Mundo)
  LEAGUE_PHASE   // Fase de liga única (Champions League novo formato)
  CUSTOM         // Personalizado
}

enum PhaseType {
  GROUP_STAGE    // Fase de grupos
  KNOCKOUT       // Mata-mata
  LEAGUE         // Liga/Pontos corridos
  PLAYOFF        // Playoff/Repescagem
}

enum TiebreakCriterion {
  POINTS              // Pontos
  WINS                // Vitórias
  GOAL_DIFFERENCE     // Saldo de gols
  GOALS_FOR           // Gols marcados
  GOALS_AGAINST       // Gols sofridos
  HEAD_TO_HEAD_POINTS // Confronto direto (pontos)
  HEAD_TO_HEAD_GOAL_DIFF // Confronto direto (saldo)
  HEAD_TO_HEAD_GOALS_FOR // Confronto direto (gols marcados)
  HEAD_TO_HEAD_GOALS_AWAY // Confronto direto (gols fora)
  AWAY_GOALS          // Gols fora (geral)
  WINS_AWAY           // Vitórias fora
  FAIR_PLAY           // Fair play (menos cartões)
  RED_CARDS           // Cartões vermelhos (menos)
  YELLOW_CARDS        // Cartões amarelos (menos)
  DRAW                // Sorteio
  UEFA_COEFFICIENT    // Coeficiente (para competições UEFA)
}

// Template de formato (pré-configurações como Copa do Brasil, Libertadores, etc)
model LeagueFormat {
  id          String            @id @default(uuid())
  name        String            @db.VarChar(100)
  slug        String            @unique @db.VarChar(100)
  description String?           @db.Text
  type        LeagueFormatType
  isTemplate  Boolean           @default(true) // Se é um template reutilizável
  createdAt   DateTime          @default(now())
  updatedAt   DateTime          @updatedAt

  // Relação com ligas que usam este formato
  leagues     League[]          @relation("LeagueFormat")
  phases      LeaguePhaseConfig[]
  
  @@index([slug])
  @@index([isTemplate])
}

// Configuração de fases para um formato (ex: Fase de Grupos, Oitavas, Quartas, etc)
model LeaguePhaseConfig {
  id              String       @id @default(uuid())
  format          LeagueFormat @relation(fields: [formatId], references: [id], onDelete: Cascade)
  formatId        String
  name            String       @db.VarChar(100)
  order           Int          // Ordem da fase (1, 2, 3...)
  type            PhaseType
  
  // Configurações da fase
  teamsCount      Int?         // Número de times nesta fase (null = calculado)
  groupsCount     Int?         // Número de grupos (se type = GROUP_STAGE)
  teamsPerGroup   Int?         // Times por grupo
  hasHomeAway     Boolean      @default(true)  // Ida e volta?
  hasExtraTime    Boolean      @default(false) // Prorrogação?
  hasPenalties    Boolean      @default(false) // Pênaltis?
  hasAwayGoal     Boolean      @default(false) // Gol fora vale?
  
  // Avanço/Eliminação
  advancingTeams  Int?         // Quantos avançam desta fase
  advancingFrom   String?      @db.VarChar(50) // De onde vêm (ex: "TOP_2_EACH_GROUP", "TOP_8", "WINNERS")
  
  createdAt       DateTime     @default(now())
  updatedAt       DateTime     @updatedAt
  
  // Instâncias reais de fases criadas para ligas específicas
  phases          LeaguePhase[]
  tiebreakRules   TiebreakRule[]

  @@index([formatId])
  @@index([order])
}

// Instância real de uma fase em uma liga específica
model LeaguePhase {
  id              String             @id @default(uuid())
  league          League             @relation(fields: [leagueId], references: [id], onDelete: Cascade)
  leagueId        String
  config          LeaguePhaseConfig? @relation(fields: [configId], references: [id])
  configId        String?
  
  name            String             @db.VarChar(100)
  order           Int
  type            PhaseType
  status          String             @default("NOT_STARTED") @db.VarChar(20) // NOT_STARTED, IN_PROGRESS, COMPLETED
  
  startDate       DateTime?
  endDate         DateTime?
  
  // Configurações (podem sobrescrever o config se necessário)
  hasHomeAway     Boolean            @default(true)
  hasExtraTime    Boolean            @default(false)
  hasPenalties    Boolean            @default(false)
  
  createdAt       DateTime           @default(now())
  updatedAt       DateTime           @updatedAt
  
  groups          LeagueGroup[]      @relation("PhaseGroups")
  standings       LeagueStanding[]

  @@unique([leagueId, order])
  @@index([leagueId])
  @@index([status])
}

// Critérios de desempate (ordenados por prioridade)
model TiebreakRule {
  id         String             @id @default(uuid())
  config     LeaguePhaseConfig  @relation(fields: [configId], references: [id], onDelete: Cascade)
  configId   String
  order      Int                // Ordem de aplicação (1º, 2º, 3º critério)
  criterion  TiebreakCriterion
  createdAt  DateTime           @default(now())

  @@unique([configId, order])
  @@index([configId])
}

// Regras disciplinares (cartões)
model DisciplineRule {
  id                        String   @id @default(uuid())
  league                    League   @relation(fields: [leagueId], references: [id], onDelete: Cascade)
  leagueId                  String   @unique
  
  yellowCardsForSuspension  Int      @default(3) // Quantos amarelos = suspensão
  yellowCardsAccumulation   Boolean  @default(true) // Acumula amarelos?
  resetYellowsAfterPhaseOrder Int?   // Zera amarelos após qual fase? (null = não zera)
  
  redCardMinimumGames       Int      @default(1) // Mínimo de jogos por vermelho direto
  doubleYellowGames         Int      @default(1) // Jogos de suspensão por 2 amarelos na mesma partida
  
  createdAt                 DateTime @default(now())
  updatedAt                 DateTime @updatedAt

  @@index([leagueId])
}

// Tabela de classificação (standings) por fase
model LeagueStanding {
  id              String      @id @default(uuid())
  phase           LeaguePhase @relation(fields: [phaseId], references: [id], onDelete: Cascade)
  phaseId         String
  team            Team        @relation(fields: [teamId], references: [id])
  teamId          String
  group           LeagueGroup? @relation(fields: [groupId], references: [id])
  groupId         String?
  
  // Estatísticas
  position        Int?
  played          Int         @default(0)
  wins            Int         @default(0)
  draws           Int         @default(0)
  losses          Int         @default(0)
  goalsFor        Int         @default(0)
  goalsAgainst    Int         @default(0)
  goalDifference  Int         @default(0)
  points          Int         @default(0)
  
  // Estatísticas casa/fora
  winsHome        Int         @default(0)
  winsAway        Int         @default(0)
  goalsHome       Int         @default(0)
  goalsAway       Int         @default(0)
  
  // Disciplina
  yellowCards     Int         @default(0)
  redCards        Int         @default(0)
  
  updatedAt       DateTime    @updatedAt

  @@unique([phaseId, teamId, groupId])
  @@index([phaseId])
  @@index([teamId])
  @@index([groupId])
}

