{
  "name": "futi-api",
  "version": "0.1.0",
  "description": "API Node.js + TypeScript do projeto futi",
  "type": "module",
  "private": true,
  "scripts": {
    "dev": "tsx watch src/main/server.ts",
    "build": "tsc -p tsconfig.build.json",
    "start": "node dist/main/server.js",
    "lint": "eslint src --ext .ts",
    "format": "prettier --write .",
    "prepare": "husky",
    "db:up": "docker compose up -d db",
    "db:down": "docker compose down",
    "prisma:generate": "prisma generate",
    "prisma:seed": "prisma db seed",
    "prisma:seed:users": "tsx prisma/seeds/users.seed.ts",
    "prisma:seed:positions": "tsx prisma/seeds/positions.seed.ts",
    "prisma:seed:teams": "tsx prisma/seeds/teams.seed.ts",
    "prisma:seed:players": "tsx prisma/seeds/players.seed.ts",
    "prisma:seed:evaluation-forms": "tsx prisma/seeds/evaluation-forms.seed.ts",
    "prisma:seed:league-formats": "tsx prisma/seeds/league-formats.seed.ts",
    "prisma:seed:large-leagues": "tsx prisma/seeds/large-leagues.seed.ts",
    "prisma:seed:matches": "tsx prisma/seeds/matches.seed.ts",
    "prisma:migrate": "prisma migrate dev --name init",
    "prisma:studio": "prisma studio",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:e2e": "NODE_OPTIONS=--experimental-vm-modules jest --config jest.config.js",
    "test:e2e:watch": "NODE_OPTIONS=--experimental-vm-modules jest --config jest.config.js --watch",
    "test:e2e:coverage": "NODE_OPTIONS=--experimental-vm-modules jest --config jest.config.js --coverage",
    "db:clean:positions-only": "tsx scripts/clean-positions-only.ts",
    "db:seed:positions-only": "tsx scripts/seed-positions-only.ts",
    "db:reset:positions": "npm run db:clean:positions-only && npm run db:seed:positions-only"
  },
  "keywords": [
    "node",
    "typescript",
    "express",
    "api"
  ],
  "author": "",
  "license": "MIT",
  "lint-staged": {
    "src/**/*.{ts,js}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*{json,md}": [
      "prettier --write"
    ]
  },
  "dependencies": {
    "@prisma/client": "^6.19.0",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/multer": "^2.0.0",
    "cookie-parser": "^1.4.7",
    "dotenv": "^17.2.3",
    "express": "^5.1.0",
    "firebase-admin": "^13.6.0",
    "jsonwebtoken": "^9.0.2",
    "multer": "^2.0.2",
    "swagger-ui-express": "^5.0.1",
    "zod": "^4.1.12"
  },
  "devDependencies": {
    "@jest/globals": "^30.2.0",
    "@types/cookie-parser": "^1.4.10",
    "@types/express": "^5.0.5",
    "@types/jest": "^30.0.0",
    "@types/node": "^24.10.0",
    "@types/supertest": "^6.0.3",
    "@types/swagger-ui-express": "^4.1.8",
    "@typescript-eslint/eslint-plugin": "^8.46.3",
    "@typescript-eslint/parser": "^8.46.3",
    "eslint": "^9.39.1",
    "eslint-config-prettier": "^10.1.8",
    "eslint-import-resolver-typescript": "^3.10.1",
    "eslint-plugin-import": "^2.32.0",
    "husky": "^9.1.7",
    "jest": "^30.2.0",
    "lint-staged": "^16.2.6",
    "openapi-types": "^12.1.3",
    "prettier": "^3.6.2",
    "prisma": "^6.19.0",
    "supertest": "^7.1.4",
    "ts-jest": "^29.4.5",
    "tsx": "^4.20.6",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.46.3",
    "vitest": "^4.0.8"
  }
}
